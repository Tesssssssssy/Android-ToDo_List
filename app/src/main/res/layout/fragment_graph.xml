<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.GraphFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TODO\nTODO"
            android:textAllCaps="true"
            android:textColor="#3F51B5"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/baemin"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/icon" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baemin"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:text="점수 계산 하기"
        android:textColor="@color/bg_color"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_calScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/baemin"
        android:layout_gravity="center"
        android:text="점수 계산"
        app:backgroundTint="@color/bg_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baemin"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textColor="@color/bg_color"
        android:textSize="25sp"
        android:text="아래 그래프 클릭 시\n새로운 그래프를 확인할 수 있습니다!"
        />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_calScore"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="11dp" />


</LinearLayout>